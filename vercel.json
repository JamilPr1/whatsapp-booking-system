{
  "version": 2,
  "buildCommand": "npm ci && cd admin-panel && npm ci && npm run build",
  "outputDirectory": "admin-panel/dist",
  "installCommand": "npm ci && cd admin-panel && npm ci",
  "framework": null,
  "functions": {
    "api/[...path].js": {
      "includeFiles": "backend/**",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path].js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
