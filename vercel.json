{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "admin-panel/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "admin-panel/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path].js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/admin-panel/dist/index.html" }
  ]
}
