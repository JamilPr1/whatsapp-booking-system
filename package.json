{
  "name": "whatsapp-booking-system",
  "version": "1.0.0",
  "description": "WhatsApp-first appointment booking system for on-site services",
  "private": true,
  "main": "server.js",
  "scripts": {
    "server": "cd backend && node server.js",
    "client": "cd admin-panel && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd backend && npm install && cd ../admin-panel && npm install",
    "build": "cd admin-panel && npm install && npm run build",
    "vercel-build": "cd admin-panel && npm ci && npm run build",
    "seed": "node backend/scripts/seedDemoData.js"
  },
  "keywords": ["whatsapp", "booking", "appointments", "on-site-services"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.5.0",
    "node-cron": "^3.0.2",
    "moment-timezone": "^0.5.43",
    "whatsapp-web.js": "^1.23.0",
    "qrcode-terminal": "^0.12.0",
    "@googlemaps/google-maps-services-js": "^3.3.34",
    "stripe": "^13.6.0",
    "twilio": "^4.19.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
